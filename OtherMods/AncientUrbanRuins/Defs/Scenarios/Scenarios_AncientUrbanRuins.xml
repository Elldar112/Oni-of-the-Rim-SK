	<root Class="ThingSetMaker_Sum">
		<resolveInOrder>true</resolveInOrder>
		<options>
			<li>
				<thingSetMaker Class="ThingSetMaker_StackCount">
					<fixedParams>
						<filter>
							<thingDefs>
								<li>Silver</li>
							</thingDefs>
						</filter>
						<countRange>1000~1000</countRange>
					</fixedParams>
				</thingSetMaker>
			</li>
			<li>
				<thingSetMaker Class="ThingSetMaker_StackCount">
					<fixedParams>
						<filter>
							<thingDefs>
								<li>MealSurvivalPack</li>
							</thingDefs>
						</filter>
						<countRange>20~20</countRange>
					</fixedParams>
				</thingSetMaker>
			</li>
			<li>
				<thingSetMaker Class="ThingSetMaker_StackCount">
					<fixedParams>
						<filter>
							<tradeTagsToAllow>
								<li>AM_Intel</li>
							</tradeTagsToAllow>
						</filter>
