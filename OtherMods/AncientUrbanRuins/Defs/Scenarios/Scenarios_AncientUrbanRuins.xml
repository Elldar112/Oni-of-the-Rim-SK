			</li>
			<li>
				<thingSetMaker Class="ThingSetMaker_StackCount">
					<fixedParams>
						<filter>
							<tradeTagsToAllow>
								<li>AM_Intel</li>
							</tradeTagsToAllow>
						</filter>
						<countRange>1~1</countRange>
					</fixedParams>
				</thingSetMaker>
			</li>
			<li>
				<thingSetMaker Class="ThingSetMaker_StackCount">
					<fixedParams>
						<filter>
							<tradeTagsToAllow>
								<li>AM_Intel</li>
							</tradeTagsToAllow>
						</filter>
						<countRange>1~1</countRange>
					</fixedParams>
				</thingSetMaker>
			</li>
		</options>
	</root>
</ThingSetMakerDef>

</Defs>