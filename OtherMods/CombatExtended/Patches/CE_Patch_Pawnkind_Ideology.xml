<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ideology</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="OotR_Oni_Miner" or defName="OotR_Oni_Logger" or defName="OotR_Oni_Farmer"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>14</min>
								<max>28</max>
							</primaryMagazineCount>
							<sidearms>
								<li>
									<generateChance>0.45</generateChance>
									<sidearmMoney>
										<min>55</min>
										<max>120</max>
									</sidearmMoney>
									<weaponTags>
										<li>NeolithicMeleeBasic</li>
									</weaponTags>
								</li>
							</sidearms>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="OotR_BT_Miner" or defName="OotR_BT_Logger" or defName="OotR_BT_Farmer" or defName="OotR_BT_Hunter"]</xpath>
