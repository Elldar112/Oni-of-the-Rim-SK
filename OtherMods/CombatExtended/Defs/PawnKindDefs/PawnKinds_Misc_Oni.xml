<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
<!-- Oni mercenary pawnkinds for vanilla factions-->
  
<PawnKindDef Name="OotR_Oni_Scavenger" ParentName="PirateScavTierBase">
	<defName>OotR_Oni_Scavenger</defName>
	<label>Oni scavenger gunner</label>
	<race>OotR_Alien_Oni</race>
	<startingHediffs>
		<li>
			<def>OotR_OniPassive</def>
		</li>
	</startingHediffs>
	<apparelTags>
		<li>OotR_OniWear</li>
	</apparelTags>
	<apparelMoney>300~500</apparelMoney>
	<weaponMoney>147~250</weaponMoney>
	<weaponTags>
		<li>Gun</li>
	</weaponTags>
	<initialResistanceRange>17~26</initialResistanceRange>
	<modExtensions>
		<li Class="CombatExtended.LoadoutPropertiesExtension">
			<primaryMagazineCount>
				<min>1</min>
				<max>2</max>
			</primaryMagazineCount>
			<sidearms>
				<li>
					<generateChance>0.7</generateChance>
					<sidearmMoney>
						<min>10</min>
						<max>60</max>
					</sidearmMoney>
					<weaponTags>
						<li>CE_Sidearm_Melee</li>
					</weaponTags>
				</li>
			</sidearms>
		</li>
	</modExtensions>
</PawnKindDef>
  
<PawnKindDef Name="OotR_Oni_Thrasher" ParentName="PirateScavTierBase">
	<defName>OotR_Oni_Thrasher</defName>
